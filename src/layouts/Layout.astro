---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - Soundmaster Radio</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-cover bg-center bg-no-repeat" style="background-image: url('/images/backgrounds/soundmaster_background.jpg');">
    <div class="min-h-screen bg-black bg-opacity-50">
      <slot />
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const buttons = document.querySelectorAll<HTMLImageElement>('[data-hover-image]');
        buttons.forEach(button => {
          const defaultImage = button.getAttribute('src') || '';
          const hoverImage = button.getAttribute('data-hover-image') || '';
          
          button.addEventListener('mouseenter', () => {
            button.src = hoverImage;
          });
          
          button.addEventListener('mouseleave', () => {
            button.src = defaultImage;
          });
        });
      });
    </script>
  </body>
</html> 