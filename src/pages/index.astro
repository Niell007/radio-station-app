---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const currentShow = {
  name: "Morning Drive with DJ Mike",
  time: "6:00 AM - 10:00 AM",
  image: "/images/general/virtual_dj_logo.jpg"
};
---

<Layout title="Welcome">
  <Navigation />
  
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Welcome Section -->
      <section class="bg-white bg-opacity-10 p-6 rounded-lg backdrop-blur-sm">
        <img src="/images/headers/h_welcome.gif" alt="Welcome" class="mb-4">
        <div class="prose prose-invert">
          <h2 class="text-2xl font-bold text-white mb-4">Welcome to Soundmaster Radio</h2>
          <p class="text-gray-200">Experience the best in music, entertainment, and community radio. Join us for live shows, exclusive interviews, and the latest hits.</p>
        </div>
      </section>

      <!-- Now Playing Section -->
      <section class="bg-white bg-opacity-10 p-6 rounded-lg backdrop-blur-sm">
        <h2 class="text-xl font-bold text-white mb-4">Now Playing</h2>
        <div class="flex items-center space-x-4">
          <img src={currentShow.image} alt={currentShow.name} class="w-24 h-24 rounded-lg">
          <div>
            <h3 class="text-lg font-semibold text-white">{currentShow.name}</h3>
            <p class="text-gray-300">{currentShow.time}</p>
            <button class="mt-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
              Listen Live
            </button>
          </div>
        </div>
      </section>

      <!-- Latest News -->
      <section class="bg-white bg-opacity-10 p-6 rounded-lg backdrop-blur-sm">
        <img src="/images/headers/h_news.gif" alt="Latest News" class="mb-4">
        <div class="space-y-4">
          <article class="border-b border-gray-600 pb-4">
            <h3 class="text-lg font-semibold text-white">New Schedule Announcement</h3>
            <p class="text-gray-300">Check out our exciting new lineup of shows starting next week!</p>
          </article>
          <article class="pb-4">
            <h3 class="text-lg font-semibold text-white">Community Event</h3>
            <p class="text-gray-300">Join us this weekend for our live broadcast from the town square.</p>
          </article>
        </div>
      </section>

      <!-- Request Section -->
      <section class="bg-white bg-opacity-10 p-6 rounded-lg backdrop-blur-sm">
        <h2 class="text-xl font-bold text-white mb-4">Request a Song</h2>
        <form class="space-y-4">
          <div>
            <label class="block text-gray-300 mb-2">Song Name</label>
            <input type="text" class="w-full px-3 py-2 bg-black bg-opacity-50 text-white rounded border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
          </div>
          <div>
            <label class="block text-gray-300 mb-2">Artist</label>
            <input type="text" class="w-full px-3 py-2 bg-black bg-opacity-50 text-white rounded border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
          </div>
          <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
            Submit Request
          </button>
        </form>
      </section>

      <!-- Search Section -->
      <section class="bg-white bg-opacity-10 p-6 rounded-lg backdrop-blur-sm">
        <h2 class="text-xl font-bold text-white mb-4">Search</h2>
        <form id="searchForm" class="space-y-4">
          <div>
            <label class="block text-gray-300 mb-2">Search for Songs, Artists, or Paragraphs</label>
            <input type="text" id="searchQuery" class="w-full px-3 py-2 bg-black bg-opacity-50 text-white rounded border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" placeholder="Type your search query here...">
          </div>
          <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
            Search
          </button>
        </form>
        <div id="searchResults" class="mt-4 space-y-4"></div>
      </section>
    </div>
  </main>
</Layout>

<script>
  document.getElementById('searchForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const query = document.getElementById('searchQuery').value;
    const resultsContainer = document.getElementById('searchResults');
    resultsContainer.innerHTML = '';

    try {
      const response = await fetch('/api/karaoke/search', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ query })
      });

      if (!response.ok) throw new Error('Search failed');

      const data = await response.json();
      data.files.forEach(file => {
        const resultItem = document.createElement('div');
        resultItem.className = 'bg-black bg-opacity-50 p-4 rounded-lg';
        resultItem.innerHTML = `
          <h3 class="text-lg font-semibold text-white">${file.title}</h3>
          <p class="text-gray-300">${file.artist}</p>
          <p class="text-gray-300">${file.language} - ${file.genre || 'Unknown Genre'}</p>
          <button onclick="window.audioPlayer.playSong({
            id: ${file.id},
            title: '${file.title}',
            artist: '${file.artist}',
            fileUrl: '${file.file_url}',
            duration: ${file.duration}
          })" class="mt-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
            Play Now
          </button>
        `;
        resultsContainer.appendChild(resultItem);
      });
    } catch (error) {
      console.error('Search error:', error);
      resultsContainer.innerHTML = '<p class="text-red-500">Failed to search. Please try again later.</p>';
    }
  });
</script>
